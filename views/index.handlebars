{{!-- font from https://fontmeme.com/ --}}
<h1><a href="https://fontmeme.com/whataburger-logo-font/"><img
      src="https://fontmeme.com/permalink/200510/018a134f2ac87b3fd12fc8b7b47de8b2.png" alt="whataburger-logo-font"
      border="0"></a></h1>
<container>
  <div class=row>
    <div class=col-4-md>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burger-list devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class=col-4-md>
      <img id=burger-image src="/burger.png">
      <form class="create-form">

        <div class="form-group">

          <label for="ca">What Kind of Burger do you Want?:</label>
          <input type="text" id="ca" name="burger_name">
        </div>
        <button id="submit" type="submit">Add Burger</button>

      </form>
    </div>

    <div class=col-4-md>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> devoured-list devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</container>