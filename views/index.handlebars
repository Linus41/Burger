<h1>BURGERS!</h1>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  {{> burger-list devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">

    <label for="ca">What Kind of Burger do you Want?:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button id="submit" type="submit">Add Burger</button>

</form>



<ul>
  {{#each burger}}
  {{#if devoured}}
  {{> devoured-list devoured=true}}
  {{/if}}
  {{/each}}
</ul>